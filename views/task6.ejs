<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>Zadanie</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #c49cdf;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 500px;
            width: 100%;
            text-align: center;
        }
        h1 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #333;
        }
        .purchase-item {
            font-size: 18px;
            margin: 10px 0;
        }
        .total {
            font-size: 22px;
            font-weight: bold;
            color: #007bff;
            margin-top: 15px;
        }
        .timer-text {
            font-weight: bold;
            color: red;
            font-size: 18px;
            margin-top: 15px;
        }
        .timer-end {
            font-weight: bold;
            font-size: 20px;
            color: #ff0000;
            background: yellow;
            padding: 10px;
            border-radius: 5px;
            margin-top: 15px;
        }
        .btn-primary {
            font-size: 18px;
            padding: 12px;
            margin-top: 20px;
            width: 100%;
        }
        .progress {
            height: 25px;
            border-radius: 15px;
            overflow: hidden;
            margin-top: 20px;
        }
        .progress-bar {
            background-color: #007bff;
            width: 0%;
            height: 100%;
            transition: width 0.1s linear;
        }
    </style>
</head>
<body>
    <% if (completedTasks && completedTasks.includes('task6')) { %>
        <p>To zadanie zosta≈Ço ju≈º uko≈Ñczone. Prosimy nie cofaƒá kart w przeglƒÖdarce. Prosimy o powr√≥t do: 
            <a href="/register">strony rejestracji</a>.
        </p>
     <% } 
     else { %>
    <div class="container">
        <h1>Finalizacja zakupu</h1>
        <form action="/task6" method="POST" id="task6-form">
            <div class="purchase-item">
                <input type="checkbox" name="ksiazka" value="55" checked disabled>
                üìñ KsiƒÖ≈ºka <strong>55 z≈Ç</strong>
            </div>
            <div class="purchase-item">
                <input type="checkbox" name="zapakowanie" value="5">
                üéÅ Zapakowanie jako prezent <strong>5 z≈Ç</strong>
            </div>
            <% if (isTricked) { %>
                <!-- Poni≈ºszy timer-text i progress-bar pokazujemy TYLKO, gdy isTricked === true -->
                <div id="timer" class="timer-text">
                    ‚è≥ Pozosta≈Ço 30 sekund na skorzystanie z opakowania za 5z≈Ç!
                </div>
            <% } %> 
            <div class="total">Ca≈Çkowita warto≈õƒá: <span id="total-price">55 z≈Ç</span></div>
            
            
           
            <button type="submit" id="submit-btn" class="btn btn-primary">Przejd≈∫ do zakupu</button>
            <input type="hidden" name="timeout" id="timeout" value="false">
            <input type="hidden" name="task6Token" value="<%= task6Token %>">

        </form>
        
        <div class="progress">
            <div class="progress-bar" id="progress-bar"></div>
        </div>

    </div>
    <% } %>
</body>
    <script>
        const timeoutInput = document.getElementById('timeout');
       window.onpageshow = function(event) {
        if (event.persisted) { 
            window.location.reload();
        }
    };

    // Pobranie element√≥w

    const giftCheckbox = document.querySelector('input[name="zapakowanie"]');
    const totalPriceElement = document.getElementById('total-price');

    function updateTotalPrice() {
        let total = 55; // Bazowa cena ksiƒÖ≈ºki
        if (giftCheckbox.checked) {
            total += 5; // Dodajemy 5 z≈Ç, je≈õli zaznaczono pakowanie
        }
        totalPriceElement.textContent = total + " z≈Ç"; // Aktualizacja tekstu
    }

    // Obs≈Çuga zmiany checkboxa
    giftCheckbox.addEventListener('change', updateTotalPrice);
       window.onpageshow = function(event) {
        if (event.persisted) { // Je≈õli strona wraca z pamiƒôci podrƒôcznej bfcache
            window.location.reload();
        }};

    // Zak≈Çadamy, ≈ºe w routes/task7.js robisz co≈õ w stylu:
    const taskDuration = 30 * 1000; // milisekundy
    const progressBar = document.getElementById('progress-bar');

    function startProgressBar(duration) {
        const interval = 50; // co 50ms
        const step = 100 / (duration / interval);
        let progress = 0;

        const timer = setInterval(() => {
            progress += step;
            if (progress >= 100) {
                progress = 100;
                clearInterval(timer);
                timeoutInput.value = 'true';
                // Automatyczne wysy≈Çanie formularza po zako≈Ñczeniu paska
                document.getElementById('task6-form').submit();
            }
            progressBar.style.width = `${progress}%`;
        }, interval);

    }

    startProgressBar(taskDuration);

     // Nas≈Çuchiwanie zdarzenia cofniƒôcia w przeglƒÖdarce
     window.onpopstate = function () {
        const userChoice = confirm("Czy na pewno chcesz opu≈õciƒá tƒô stronƒô?");
        if (userChoice) {
        // U≈ºytkownik wybra≈Ç "OK" ‚Üí przekierowanie
        window.location.href = "/register";
        } else {
        // U≈ºytkownik wybra≈Ç "Anuluj" ‚Üí zostaje na stronie i zapobiegamy cofniƒôciu
        history.pushState(null, null, location.href);
        }
        };
        // Zapobiegaj zapisywaniu tej strony w historii
        history.pushState(null, null, location.href);
        window.addEventListener('popstate', function () {
        history.pushState(null, null, location.href);
        });


        // Pobierz zmiennƒÖ isTricked z serwera (przekazanƒÖ w render)
  const isTricked = <%= isTricked %>; // tu dajemy true/false

// Je≈ºeli isTricked = true, wykonujemy kod timera
if (isTricked) {
  const timerElement = document.getElementById('timer');
  timerElement.style.display = 'block';

  let timeLeft = 30; // sekund
  timerElement.textContent = `‚è≥ Pozosta≈Ço ${timeLeft} sekund na skorzystanie z opakowania za 5z≈Ç!`;

  const countdownInterval = setInterval(() => {
    timeLeft--;
    timerElement.textContent = `‚è≥ Pozosta≈Ço ${timeLeft} sekund na skorzystanie z opakowania za 5z≈Ç!`;
    
    if (timeLeft <= 0) {
      clearInterval(countdownInterval);
    }
  }, 1000);
}
 

    // Wy≈ÇƒÖczenie przycisku po pierwszym klikniƒôciu
    document.getElementById('task6-form').addEventListener('submit', function() {
    const submitButton = document.getElementById('submit-btn');
    submitButton.disabled = true; ;
    });




    </script>

</html>
