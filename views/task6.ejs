<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>Finalizacja zakupu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #c49cdf;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 500px;
            width: 100%;
            text-align: center;
        }
        h1 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #333;
        }
        .purchase-item {
            font-size: 18px;
            margin: 10px 0;
        }
        .total {
            font-size: 22px;
            font-weight: bold;
            color: #007bff;
            margin-top: 15px;
        }
        .timer-text {
            font-weight: bold;
            color: red;
            font-size: 18px;
            margin-top: 15px;
        }
        .timer-end {
            font-weight: bold;
            font-size: 20px;
            color: #ff0000;
            background: yellow;
            padding: 10px;
            border-radius: 5px;
            margin-top: 15px;
        }
        .btn-primary {
            font-size: 18px;
            padding: 12px;
            margin-top: 20px;
            width: 100%;
        }
        .progress {
            height: 25px;
            border-radius: 15px;
            overflow: hidden;
            margin-top: 20px;
        }
        .progress-bar {
            background-color: #007bff;
            width: 0%;
            height: 100%;
            transition: width 0.1s linear;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Finalizacja zakupu</h1>
        <form action="/task6" method="POST" id="task6-form">
            <div class="purchase-item">
                <input type="checkbox" name="ksiazka" value="55" checked disabled>
                üìñ KsiƒÖ≈ºka <strong>55 z≈Ç</strong>
            </div>
            <div class="purchase-item">
                <input type="checkbox" name="zapakowanie" value="5">
                üéÅ Zapakowanie jako prezent <strong>5 z≈Ç</strong>
            </div>
            <div class="total">Ca≈Çkowita warto≈õƒá: <span id="total-price">55 z≈Ç</span></div>
            
            <div id="timer" class="timer-text" style="display: none;">
                ‚è≥ Pozosta≈Ço 30 sekund na skorzystanie z oferty!
            </div>
            
            <button type="submit" class="btn btn-primary">Przejd≈∫ do zakupu</button>
            <input type="hidden" name="timeout" id="timeout" value="false">
            <input type="hidden" name="taskToken" value="<%= taskToken %>">
        </form>
        
        <div class="progress">
            <div class="progress-bar" id="progress-bar"></div>
        </div>
    </div>
    
    <script>
        const isTricked = <%= isTricked ? 'true' : 'false' %>;
        const timerDiv = document.getElementById('timer');
        const totalPriceElement = document.getElementById('total-price');
        const giftCheckbox = document.querySelector('input[name="zapakowanie"]');
        
        if (isTricked) {
            timerDiv.style.display = 'block';
            let remaining = 30;
            const interval = setInterval(() => {
                remaining--;
                if (remaining > 0) {
                    timerDiv.textContent = `‚è≥ Pozosta≈Ço ${remaining} sekund na skorzystanie z oferty!`;
                } else {
                    clearInterval(interval);
                    timerDiv.innerHTML = `<div class='timer-end'>‚ùå KONIEC PROMOCJI! Cena mo≈ºe wzrosnƒÖƒá!</div>`;
                }
            }, 1000);
        }
        
        giftCheckbox.addEventListener('change', function() {
            let total = 55;
            if (this.checked) total += 5;
            totalPriceElement.textContent = `${total} z≈Ç`;
        });
        
        const progressBar = document.getElementById('progress-bar');
        const form = document.getElementById('task6-form');
        const timeoutInput = document.getElementById('timeout');
        
        function startProgressBar(duration) {
            const interval = 50;
            const step = 100 / (duration / interval);
            let progress = 0;
            
            const timer = setInterval(() => {
                progress += step;
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(timer);
                    timeoutInput.value = 'true';
                    form.submit();
                }
                progressBar.style.width = `${progress}%`;
            }, interval);
        }
        
        startProgressBar(30000);
    </script>
</body>
</html>
