<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zadanie 3: Misdirections</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .task-container {
            text-align: center;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #28a745;
        }

        .arrow-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 20px 0;
        }

        .arrow {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 15px 20px;
            font-size: 18px;
            font-weight: bold;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            width: 300px;
            transition: opacity 0.3s ease;
            flex-direction: column;
            text-align: center;
        }

        .arrow-green {
            background-color: #28a745;
            clip-path: polygon(10% 0, 90% 0, 100% 50%, 90% 100%, 10% 100%);
        }

        .arrow-gray {
            background-color: #6c757d;
            clip-path: polygon(90% 0, 10% 0, 0 50%, 10% 100%, 90% 100%);
        }

        .arrow:hover {
            opacity: 0.8;
        }

        .progress {
            height: 25px;
            border-radius: 50px;
            overflow: hidden;
            margin-top: 20px;
        }

        .progress-bar {
            background-color: #007bff;
            width: 0%;
            height: 100%;
            transition: width 0.1s linear;
        }
    </style>
</head>
<body>
<% if (completedTasks && completedTasks.includes('task3')) { %>
        <p>To zadanie zostało już ukończone.</p>
    <% } 
    else { %>
    <div class="task-container">
        <h1>Przejdź do płatności</h1>
        <p>Wybierz preferowaną opcję:</p>
        <form action="/task3" method="POST" id="task3-form"> <!-- Dodano id -->
            <div class="arrow-container">
                <button type="submit" name="choice" value="without_insurance" class="arrow arrow-gray">
                    <div class="arrow-text-wrap">
                        <span class="arrow-main">Kontynuuj</span>
                        <span class="arrow-sub">bez ubezpieczenia</span>
                    </div>
                </button>

                <button type="submit" name="choice" value="with_insurance" class="arrow arrow-green">
                    <div class="arrow-text-wrap">
                        <span class="arrow-main">Kontynuuj</span>
                        <span class="arrow-sub">z ubezpieczeniem</span>
                    </div>
                </button>
                <input type="hidden" name="timeout" id="timeout" value="false">
                <input type="hidden" name="taskToken" value="<%= taskToken %>">
            </div>
        </form>
        <!-- Pasek ładowania -->
        <div class="progress">
            <div class="progress-bar" id="progress-bar"></div>
        </div>
    </div>
    <% } %>

    <script>
        // Pobranie wartości czasu wylosowanego w backendzie
        const taskDuration = <%= wylosowanyCzas %> * 1000; // Przeliczamy na milisekundy
        const progressBar = document.getElementById('progress-bar');
        const form = document.getElementById('task3-form'); // Poprawiono ID formularza
        const timeoutInput = document.getElementById('timeout');

        function startProgressBar(duration) {
            const interval = 50; // Odświeżanie co 50ms
            const step = 100 / (duration / interval); // Obliczenie kroku
            let progress = 0;

            const timer = setInterval(() => {
                progress += step;
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(timer);

                    // Ustawienie znacznika timeout na true
                    timeoutInput.value = 'true';

                    // Automatyczne przesłanie formularza
                    form.submit();
                }
                progressBar.style.width = `${progress}%`;
            }, interval);
        }

        // Uruchomienie paska postępu
        startProgressBar(taskDuration);
    </script>
</body>
</html>
